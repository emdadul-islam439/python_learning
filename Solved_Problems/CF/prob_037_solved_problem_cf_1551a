from math import floor

t = int(input())
while t:
    t -= 1
    n = int(input())
    
    a,b  = 0,0
        
    while n > 0:
        if n <= 3:
            if n == 1:
                a += 1
            elif n == 2:
                b += 1
            else:
                a += 1
                b += 1
            n = 0
        else:
            one_third = int(floor(n/3))
            a += one_third
            b += one_third
            n -= (a+b+b)
            
    print(f"{a} {b}")